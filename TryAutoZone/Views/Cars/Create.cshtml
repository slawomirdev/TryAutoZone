@model TryAutoZone.Models.Car

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <select asp-for="Make" asp-items="Html.GetEnumSelectList<CarMake>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <!-- Dodane Pola -->
            <!-- Moc -->
            <div class="form-group">
                <label asp-for="HorsePower" class="control-label"></label>
                <input asp-for="HorsePower" class="form-control" />
                <span asp-validation-for="HorsePower" class="text-danger"></span>
            </div>
            <!-- Pojemność Silnika -->
            <div class="form-group">
                <label asp-for="EngineCapacity" class="control-label"></label>
                <input asp-for="EngineCapacity" class="form-control" />
                <span asp-validation-for="EngineCapacity" class="text-danger"></span>
            </div>
            <!-- Rodzaj Silnika -->
            <div class="form-group">
                <label asp-for="EngineType" class="control-label"></label>
                <select asp-for="EngineType" asp-items="Html.GetEnumSelectList<EngineType>()" class="form-control"></select>
            </div>
            <!-- Skrzynia Biegów -->
            <div class="form-group">
                <label asp-for="Gearbox" class="control-label"></label>
                <select asp-for="Gearbox" asp-items="Html.GetEnumSelectList<GearboxType>()" class="form-control"></select>
            </div>
            <!-- Emisja CO2 -->
            <div class="form-group">
                <label asp-for="CO2Emission" class="control-label"></label>
                <input asp-for="CO2Emission" class="form-control" />
                <span asp-validation-for="CO2Emission" class="text-danger"></span>
            </div>
            <!-- Zużycie Paliwa -->
            <div class="form-group">
                <label asp-for="FuelConsumptionString" class="control-label"></label>
                <input asp-for="FuelConsumptionString" class="form-control" />
                <span asp-validation-for="FuelConsumptionString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
