@model TryAutoZone.Models.Reservation

@{
    ViewData["Title"] = "Edit Reservation";
}

<h1 class="mb-4">Edit Reservation</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="UserId" class="form-label">User</label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CarId" class="form-label">Car</label>
                <select asp-for="CarId" class="form-select" asp-items="ViewBag.CarId"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ReservationDate" class="form-label">Reservation Date</label>
                <input asp-for="ReservationDate" type="date" class="form-control" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}